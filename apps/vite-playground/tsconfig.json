{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@sequelfinance/keystore": ["../../packages/keystore"],
      "@sequelfinance/ledger": ["../../packages/ledger"],
      "@sequelfinance/swapkit-core": ["../../packages/swapkit-core"],
      "@sequelfinance/swapkit-entities": ["../../packages/swapkit-entities"],
      "@sequelfinance/swapkit-explorers": ["../../packages/swapkit-explorers"],
      "@sequelfinance/toolbox-evm": ["../../packages/toolbox-evm"],
      "@sequelfinance/toolbox-cosmos": ["../../packages/toolbox-cosmos"],
      "@sequelfinance/toolbox-utxo": ["../../packages/toolbox-utxo"],
      "@sequelfinance/types": ["../../packages/types"],
      "@sequelfinance/walletconnect": ["../../packages/walletconnect"],
      "@sequelfinance/web-extensions": ["../../packages/web-extensions"],
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
